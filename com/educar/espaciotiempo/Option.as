package com.educar.espaciotiempo {		import flash.display.MovieClip;	import flash.display.Sprite;	import flash.text.TextField;	import flash.geom.Point;	import com.greensock.TweenLite;	import com.greensock.easing.Back;			public class Option extends Sprite {				//FLA		public var mcBack:Sprite;		public var txtLabel:TextField;				private var number:OptionNumber;				private var value:uint;				public function Option( text:String, value:uint ) {			// constructor code			txtLabel.text = text;			this.value = value;		}				public function adopt( number:OptionNumber ):void {			if( this.number ){				this.number.backToInit();			}			this.number = number;			this.number.mouseEnabled = false;			this.number.scaleX = this.number.scaleY = 1;			var coords:Point = this.number.parent.localToGlobal( new Point( this.number.x, this.number.y ) );			this.number.x = this.globalToLocal( coords ).x;			this.number.y = this.globalToLocal( coords ).y;			this.addChild( this.number );			TweenLite.to( this.number, 1, { x: 8, y: 3, ease: Back.easeOut } );		}		public function getValue():uint {			return this.value;		}		public function isCorrect():Boolean {			return this.value == this.number.getValue();		}			}	}