package com.educar.espaciotiempo {		import flash.display.MovieClip;	import flash.display.Sprite;	import flash.text.TextField;	import flash.events.MouseEvent;	import flash.geom.Point;	import flash.events.Event;	import com.educar.game.GameButton;	import flash.display.DisplayObjectContainer;	import com.greensock.TweenLite;	import com.greensock.easing.Back;			public class OptionNumber extends GameButton {				//FLA		public var txtLabel:TextField;				private var value:uint;		private var initPos:Point;		private var oldParent:DisplayObjectContainer;				public function OptionNumber( value:uint ) {			// constructor code			this.value = value;			this.addEventListener(Event.ADDED_TO_STAGE, init );		}				private function init(e){			this.removeEventListener(Event.ADDED_TO_STAGE, init );			txtLabel.text = this.value.toString();			this.oldParent = this.parent;			this.addEventListener(MouseEvent.MOUSE_DOWN, drag );		}				public function savePos(){			this.initPos = new Point( this.x, this.y );		}				public function backToInit():void {			this.mouseEnabled = false;			this.scaleX = this.scaleY = 1;			var coords:Point = this.parent.localToGlobal( new Point( this.x, this.y ) );			this.x = this.oldParent.globalToLocal( coords ).x;			this.y = this.oldParent.globalToLocal( coords ).y;			this.oldParent.addChild( this );			TweenLite.to( this, 1, { x: this.initPos.x, y: this.initPos.y, ease: Back.easeOut, onComplete: this.backToInitEnd } );		}		private function backToInitEnd():void {			this.mouseEnabled = true;		}				public function getInitPos():Point {			return this.initPos;		}				private function drag(e){			this.startDrag();			this.stage.addEventListener(MouseEvent.MOUSE_UP, dragout );		}		private function dragout(e){			this.stopDrag();			this.stage.removeEventListener(MouseEvent.MOUSE_UP, dragout );			this.dispatchEvent( new Event( Event.CHANGE, true ) );		}				public function getValue():uint {			return this.value;		}			}	}