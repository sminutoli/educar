package com.educar.club {	import flash.display.Sprite;	import com.educar.game.GameButton;	import com.greensock.TweenLite;	import com.greensock.easing.Elastic;	import com.greensock.plugins.TweenPlugin;	import com.greensock.plugins.ColorTransformPlugin;	import flash.filters.GlowFilter;	import com.greensock.plugins.GlowFilterPlugin;		public class AnswerButton extends GameButton {				function AnswerButton(){			super();			TweenPlugin.activate([ColorTransformPlugin]); //activation is permanent in the SWF, so this line only needs to be run once.						TweenPlugin.activate([GlowFilterPlugin]); //activation is permanent in the SWF, so this line only needs to be run once.		}				override protected function createAnimation():void {			this.animationOver = TweenLite.to( this, 1, { scaleX: this.scaleX * 1.05, scaleY: this.scaleY * 1.05, ease: Elastic.easeOut  } );			this.animationOver.pause();			this.animationOut = TweenLite.to( this, 1, { scaleX: this.scaleX, scaleY: this.scaleY, ease: Elastic.easeOut  } );			this.animationOut.pause();		}				public function getOption():String {			var myPattern:RegExp = /mcAnswer(\w*)/ig;           	var result:Object = myPattern.exec(this.name);			return result[1];		}		public function setOk():void {			this.mouseEnabled = false;			TweenLite.to( this, 1, {GlowFilter:{color:0xFFFF00, blurX:5, blurY:5, strength:1, quality: 3, alpha:1}});		}		public function setWrong():void {			this.mouseEnabled = false;			TweenLite.to( this, 0.5, { colorTransform:{tint:0x000000, tintAmount:0.5} });		}		public function setNormal():void {			this.mouseEnabled = true;			TweenLite.to( this, 0.5, { colorTransform:{tint:null, tintAmount:0.5} });		}	}		}