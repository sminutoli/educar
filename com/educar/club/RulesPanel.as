package com.educar.club {		import flash.display.Sprite;	import com.educar.game.GameButton;	import flash.events.MouseEvent;	import com.greensock.TweenLite;	import com.greensock.easing.Back;	import flash.display.MovieClip;	import flash.events.Event;	import com.educar.game.GameEvent;	import flash.display.DisplayObjectContainer;		public class RulesPanel extends MovieClip {				//from FLA		public var btnNext:GameButton;		public var btnRead:GameButton;		public var mcTitle:Sprite;		public var mcSubtitle:Sprite;				private var txtAnim:TweenLite;		private var btnAnim:TweenLite;				public function RulesPanel() {			this.addEventListener( Event.ADDED_TO_STAGE, init, false, 0, true );		}				private function init(e:Event):void {			stop();			btnNext.addEventListener(MouseEvent.CLICK, nextSlide );						TweenLite.from( btnRead, 1, { alpha: 0, x: '+20', ease: Back.easeOut, delay: 1.5 } );			btnAnim = TweenLite.from( btnNext, 1, { alpha: 0, x: '+20', ease: Back.easeOut, delay: 1.5 } );			updateFrame();		}				private function nextSlide(e:MouseEvent):void {			if( this.currentFrame == this.totalFrames ){				closePanel();				return;			}			this.nextFrame();			updateFrame();		}				private function updateFrame(){			TweenLite.from( mcSubtitle, 1, { alpha:0, y: '-20', ease: Back.easeOut } );			TweenLite.from( mcTitle, 1, { alpha:0, y: '-20', ease: Back.easeOut, delay: 0.7 } );		}				private function closePanel(){			btnNext.mouseChildren = btnNext.mouseEnabled = false;			TweenLite.to( btnNext, 1, { alpha: 0, x: '+20', ease: Back.easeOut, delay: 0.5 } );			TweenLite.to( [ mcTitle, mcSubtitle, btnRead ], 1, { alpha: 0, y: '-20', ease: Back.easeOut } );			TweenLite.delayedCall(2, closePanelEnd );		}				private function closePanelEnd(){			this.dispatchEvent( new GameEvent( GameEvent.GAME_START ) );			this.parent.removeChild( this );		}	}		}