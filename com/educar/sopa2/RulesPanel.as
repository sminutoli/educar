package com.educar.sopa2 {	import flash.display.Sprite;	import flash.events.MouseEvent;	import com.educar.game.GameEvent;	import flash.events.Event;	import flash.ui.Mouse;	import com.greensock.TweenLite;	import com.greensock.easing.Back;		public class RulesPanel extends Sprite {		//FLA symbol		public var btnNext:Sprite;		public var btnRead:Sprite;		public var mcText1:Sprite;		public var mcText2:Sprite;		public var mcText3:Sprite;					public function RulesPanel() {			// constructor code			TweenLite.from( mcText1, 0.8, { alpha: 0, y: '-15' } );			TweenLite.from( mcText2, 0.8, { alpha: 0, y: '+15', delay: 0.5 } );			TweenLite.from( mcText3, 0.8, { alpha: 0, y: '+15', delay: 1 } );			TweenLite.from( btnRead, 0.8, { alpha: 0, y: '+15', ease: Back.easeOut, delay: 1.5 } );			TweenLite.from( btnNext, 0.8, { alpha: 0, ease: Back.easeOut, x: '+50', delay: 1.5  } );						btnNext.useHandCursor = btnNext.buttonMode = true;			btnNext.addEventListener(MouseEvent.CLICK, closePanel );		}				private function closePanel( e:MouseEvent ):void {			TweenLite.to( mcText1, 0.8, { alpha: 0, y: '-15' } );			TweenLite.to( mcText2, 0.8, { alpha: 0, y: '+15', delay: 0.5 } );			TweenLite.to( mcText3, 0.8, { alpha: 0, y: '+15', delay: 1 } );			TweenLite.to( btnRead, 0.8, { alpha: 0, y: '+15', delay: 1.5, ease: Back.easeIn } );			TweenLite.to( btnNext, 0.8, { alpha: 0, ease: Back.easeIn, x: '+50', delay: 1.5, onComplete: closePanelEnd } );		}				private function closePanelEnd():void {			this.dispatchEvent( new GameEvent( GameEvent.GAME_START ) );			this.parent.removeChild( this );		}	}	}