package com.educar.game {	import flash.display.Sprite;	import flash.events.MouseEvent;	import com.greensock.TweenLite;	import flash.events.Event;	import com.greensock.easing.Back;	import com.greensock.easing.Elastic;	import flash.geom.Point;		public class GameButton extends Sprite {				protected var animationOver:TweenLite;		protected var animationOut:TweenLite;		protected var clickEvent:Event;				public function GameButton() {			// constructor code			this.mouseChildren = false;			this.useHandCursor = this.buttonMode = true;			this.addEventListener(MouseEvent.CLICK, buttonClick);			this.addEventListener(MouseEvent.MOUSE_OVER, buttonOver);			this.addEventListener(MouseEvent.MOUSE_OUT, buttonOut);			this.createAnimation();		}				protected function createAnimation():void {			this.animationOver = TweenLite.to( this, 1, { scaleX: this.scaleX * 1.1, scaleY: this.scaleY * 1.1, ease: Elastic.easeOut  } );			this.animationOver.pause();			this.animationOut = TweenLite.to( this, 1, { scaleX: this.scaleX, scaleY: this.scaleY, ease: Elastic.easeOut  } );			this.animationOut.pause();		}				public function setAnimationOver( t:TweenLite):void {			this.animationOver = t;		}		public function setAnimationOut( t:TweenLite):void {			this.animationOut = t;		}		public function setClickEvent( e:Event):void {			this.clickEvent = e;		}				private function buttonOver(e:MouseEvent):void {			//if( TweenLite.getTweensOf( this, true).length > 0 ) return;			TweenLite.killTweensOf( this );			this.animationOver.play(0);		}		private function buttonOut(e:MouseEvent):void {			if( ! this.mouseEnabled ) return;			TweenLite.killTweensOf( this );			//if( TweenLite.getTweensOf( this, true).length > 0 ) return;			this.animationOut.play(0);		}		private function buttonClick(e:MouseEvent):void {			if( clickEvent ) this.dispatchEvent( clickEvent );		}	}	}