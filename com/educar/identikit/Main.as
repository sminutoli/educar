package com.educar.identikit {	import flash.display.Sprite;	import com.educar.game.Game;	import com.educar.game.GameEvent;	import com.greensock.TweenLite;	import flash.events.Event;		public class Main extends Game {				private static var instance:Main;				public static function getInstance():Main {			return Main.instance;		}				public function Main(){			super();			if( Main.instance ) throw new Error('Main is a singleton');			Main.instance = this;					}				override protected function showRules(e:Event):void {			trace("Identikit Main showRules");			super.showRules(e);			var panel:Sprite = new RulesPanel( this.gameStarted );			this.addChild( panel );		}				override protected function createButtons(e:GameEvent=null):void {			this.stage.removeEventListener( GameEvent.GAME_START, createButtons );						//inherits purpouses			var items:FaceItems = new FaceItems();			items.y = 90;			addChildAt( items, 0 );			TweenLite.from( items, 0.8, { y: '+30', alpha: 0, delay: 0 } );						var face:FaceZone = new FaceZone();			face.x = 540;			face.y = 208;			addChildAt( face, 1 );			TweenLite.from( face, 0.8, { x: '+30', alpha: 0, delay: 0.7 } );		}			}	}