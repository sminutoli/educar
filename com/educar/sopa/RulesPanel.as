package com.educar.sopa {	import flash.display.Sprite;	import flash.events.MouseEvent;	import com.educar.game.GameEvent;	import flash.events.Event;	import flash.ui.Mouse;	import com.greensock.TweenLite;	import com.greensock.easing.Back;		public class RulesPanel extends Sprite {		//FLA symbol		public var btnNext:Sprite; 		public var mcTitle:Sprite;		public var mcSubtitle:Sprite;			public function RulesPanel() {			// constructor code			TweenLite.from( mcTitle, 0.8, { alpha: 0, y: '-15' } );			TweenLite.from( mcSubtitle, 0.8, { alpha: 0, y: '+15', delay: 0.5 } );			TweenLite.from( btnNext, 0.8, { alpha: 0, ease: Back.easeOut, x: '+50', delay: 1  } );						btnNext.useHandCursor = btnNext.buttonMode = true;			btnNext.addEventListener(MouseEvent.CLICK, closePanel );		}				private function closePanel( e:MouseEvent ):void {			TweenLite.to( btnNext, 0.8, { alpha: 0, ease: Back.easeIn, x: '+50'  } );			TweenLite.to( mcTitle, 0.8, { alpha: 0 } );			TweenLite.to( mcSubtitle, 0.8, { alpha: 0, onComplete: closePanelEnd } );		}				private function closePanelEnd():void {			this.dispatchEvent( new GameEvent( GameEvent.GAME_START ) );			this.parent.removeChild( this );		}	}	}