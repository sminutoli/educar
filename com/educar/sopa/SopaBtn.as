package com.educar.sopa {	import flash.display.Sprite;	import com.greensock.TweenLite;	import flash.events.Event;	import flash.events.MouseEvent;		public class SopaBtn extends Sprite {				protected var animation:TweenLite;		private var enabled:Boolean;				public function SopaBtn() {			// constructor code			this.mouseChildren = false;			this.buttonMode = this.useHandCursor = true;			this.addEventListener( Event.ADDED_TO_STAGE, init );		}				protected function init( e:Event ):void {			this.removeEventListener( Event.ADDED_TO_STAGE, init );			//for inhertance purposes		}				public function setEnabled( value:Boolean ):void {			this.enabled = this.mouseEnabled = value;			if( !this.enabled ){				this.alpha = .5;			} else {				TweenLite.to( this, 1, { alpha: 1 } );			}		}				public function show( delay:uint = 0 ):void {			this.show_end();		}				protected function show_end():void {			this.make_animation();		}		protected function make_animation():void {			this.animation = TweenLite.to( this, 0.5, { scaleX: 0.95, scaleX: 0.95, alpha: 0.8 } );			this.animation.pause();			this.bind_listeners();		}		protected function bind_listeners():void {			this.addEventListener(MouseEvent.ROLL_OVER, btn_over );			this.addEventListener(MouseEvent.ROLL_OUT, btn_out );			this.addEventListener(MouseEvent.CLICK, btn_click );		}				protected function btn_over( e:MouseEvent ):void {			//trace( this, 'btn_over' );			this.animation.play();		}		protected function btn_out( e:MouseEvent ):void {			this.animation.reverse();		}		protected function btn_click( e:MouseEvent ):void {			//this.dispatchEvent( new Event( GridEvent.SHOW_HINT, true ) );		}	}	}